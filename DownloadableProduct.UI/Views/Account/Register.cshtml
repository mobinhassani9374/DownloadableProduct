@using DownloadableProduct.UI.Models.Account
@model RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام - آی  گرافیک";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bread">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/">آی  گرافیک</a></li>
            <li class="active">ثبت نام </li>
        </ol>
    </div>
</div>


<div class="login">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="login__title"> ثبت نام در آی  گرافیک</div>
                <div class="login__desc">کاربر گرامی شما از این طریق این بخش می توانید به پنل کاربری خود مراجعه
                    کنید
                </div>
                <form method="post">
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl"/>
                    @Html.AntiForgeryToken()
                    @Html.Partial("ErrorPartialView")
                    <div class="form-group">
                        <label> شماره تلفن خود را وارد کنید : </label>
                        <input data-error-msg="این فیلد الزامی است" type="text" required asp-for="PhoneNumber" class="form-control" placeholder="شماره تلفن">
                    </div>
                    <div class="form-group">
                        <label>  نام و نام خانوادگی خود را وارد کنید : </label>
                        <input data-error-msg="این فیلد الزامی است" type="text" required asp-for="FullName" class="form-control" placeholder="نام و نام خانوادگی">
                    </div>
                    <div class="form-group">
                        <label> رمز عبور خود را وارد کنید : </label>
                        <input type="password" required asp-for="Password" class="form-control" placeholder="رمز عبور">
                    </div>
                    <div class="form-group">
                        <label> تکرار رمز عبور خود را وارد کنید : </label>
                        <input type="password" required asp-for="ConfirmPassword" class="form-control" placeholder="تکرار رمز عبور">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">ثبت نام</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
