@{
    ViewData["Title"] = "رد کارت بانکی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bread">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/">آی  گرافیک</a></li>
            <li><a href="/admin">پنل ادمین</a></li>
            <li class="active">رد کارت بانکی</li>
        </ol>
    </div>
</div>

<div class="login">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="login__title">رد کارت بانکی</div>
               
                <form method="post">
                    <input type="hidden" name="id" value="@ViewBag.Id"/>
                    @Html.AntiForgeryToken()
                    @Html.Partial("ErrorPartialView")
                   
                    <div class="form-group">
                        <label>     دلیل رد کارت بانکی : </label>
                        <textarea required name="Description" rows="7" class="form-control" placeholder=""></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger btn-block">رد</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

