@using DownloadableProduct.UI.Models.Product
@model SetFileViewModel
@{
    ViewData["Title"] = "بررسی محصول  -  انتخاب فایل محصول";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bread">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/">ایران گرافیک</a></li>
            <li><a href="/admin">پنل مدیریتی</a></li>
            <li class="active">بررسی محصول - انتخاب فایل محصول</li>
        </ol>
    </div>
</div>

<div class="login">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="login__title">بررسی محصول - انتخاب فایل محصول</div>               
                <form method="post" enctype="multipart/form-data">  
                    @Html.AntiForgeryToken()
                    @Html.Partial("ErrorPartialView")
                    <input type="hidden" asp-for="Id" value="@ViewBag.Id" />                 
                    <div class="form-group">
                        <label>  انتخاب فایل محصول </label>
                        <input type="file"  name="@Html.NameFor(c=>c.File)" class="form-control" >
                    </div>                                   
                    <div class="form-group">
                        <button type="submit" required class="btn btn-success btn-block">تایید و مرحله بعد</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

