@using DownloadableProduct.Domain.Dto.Product
@model ProductDto
@{
    ViewData["Title"] = "بررسی محصول  - اطلاعات پایه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bread">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/">ایران گرافیک</a></li>
            <li><a href="/admin">پنل مدیریتی</a></li>
            <li class="active">بررسی محصول  - اطلاعات پایه</li>
        </ol>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="product__detail">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <img src="~/Files/@Model.UserUpoadImage" class="img-responsive img-thumbnail"/>
                    </div>
                    <div class="col-md-9 col-sm-8 col-xs-12">
                        <h1 class="product__detail__title">@Model.Title</h1>
                        <div>قیمت : <span>@Model.Price</span> تومان</div>
                        <div>پسوند فایل : @Model.Extension</div>
                        <div>ابعاد : @Model.Dimensions</div>
                        <div>زمان ایجاد :  @Model.CreateDate</div>
                        <div style="margin-top: 10px;">
                            <a href="/Admin/Product/SetSmallImage/@Model.Id" class="btn btn-success">تایید و مرحله بعد </a>
                        </div>
                        <hr />
                        <div>@Model.Description</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




